<% layout('layout/boilerplate.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="stylesheets/clubs.css">
<style>

    body,.team-boxed{
        background-color: black !important;
    }
    
    .box{
        background-image: url('https://i.gifer.com/fxVE.gif');
        background-position: center;
        color:white;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius:10px;
    }
   .box:hover{
    box-shadow: 7px 10px 12px -5px rgba(255,255,255,0.56);
   }
    .view{
        font-size: 1.3rem;
    }
    a:hover{
        text-decoration: none;
    }
    
</style>
<% if(!symposium.length) {%>
    <div class="container gif">
        <div class="row">
            <div class="col-md-12 col-lg-6 offset-lg-3">
                <img src="https://i.gifer.com/P4id.gif" alt="">
            </div>
        </div>
        
    </div>
<%}%>

<div class="team-boxed">
    <div class="row people">
        <%for(let symp of symposium) {%>
                <div class="col-md-12 col-lg-4 item">
                    <a href="/symposium/<%=symp._id%>" class="text-white ml-5 view">
                    <div class="box"><img class="rounded-circle" src="<%=symp.image[0].url%>" style="height: 100px;">
                        <h3 class="name"><%=symp.title%></h3>
                        <p class="title">SYMPOSIUM</p>
                        <p class="description text-white ml-3" style="height: 100px;"><%=symp.description.substring(0,150)%>...</p>
                       </div>
                    </a>
                    </div>
                    
       
        <%}%>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
